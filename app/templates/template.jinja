                }

                .add-to-cart {
                    background-color: #ffa142;
                    color: white;
                    position: absolute;
                    font-size: 0.75rem;
                    bottom: 0;
                    left: 0;
                    width: 100%;
                    border: none;
                }

                #loader {
                    position: fixed;
                    display: none;
                    align-items: center;
                    width: 80%;
                    top: 30%;
                    left: 25%;
                    z-index: 999;
                }

                .loading-gif {
                    width: 60%;
                    height: auto;
                }
            }

            @media (max-width:480px) {
                main {
                    margin-top: 20vh;
                }

                .navbar {
                    background-color: #dd913e !important;
                    padding: 0px !important;
                }

                .section-title {
                    font-size: 1rem;
                    font-weight: 900;
                    display: inline-block;
                    padding: 0rem 0.5rem;
                }

                .section-title-box::before,
                .section-title-box::after {
                    border-top: 1px solid black;
                    display: block;
                    height: 1px;
                    content: " ";
                    flex-grow: 1;
                    margin-top: 0.75rem;
                }

                .book-img {
                    min-height: 15vh;
                    max-height: 15vh;
                    position: relative;
                }

                .book-name {
                    color: #636363;
                    font-size: 0.75rem;
                }

                .book-author-name {
                    color: #636363;
                    font-size: 0.5rem;
                }

                .book-rating {
                    color: #dd913e;
                    font-size: 0.5rem;
                }

                .overlay {
                    position: absolute;
                    bottom: 0;
                    background: rgb(0, 0, 0);
                    background: rgba(0, 0, 0, 0.5);
                    width: 82%;
                    height: 100%;
